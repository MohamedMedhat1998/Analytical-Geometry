<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andalus.abo_med7at.analyticalgeometry">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/ADMOB_APP_ID"/>

        <activity android:name=".main_activity.MainActivity" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".pair_activity.PairActivity" android:parentActivityName=".main_activity.MainActivity"/>
        <activity android:name=".DrawingClass" />
        <activity android:name=".circle_activity.CircleActivity" android:parentActivityName=".main_activity.MainActivity"/>
        <activity android:name=".ParabolaActivity" android:parentActivityName=".main_activity.MainActivity"/>
        <activity android:name=".EllipseActivity" android:parentActivityName=".main_activity.MainActivity"/>
        <activity android:name=".HyperbolaActivity" android:parentActivityName=".main_activity.MainActivity"/>
        <activity android:name=".GeneralActivity" android:parentActivityName=".main_activity.MainActivity"/>
    </application>

</manifest>