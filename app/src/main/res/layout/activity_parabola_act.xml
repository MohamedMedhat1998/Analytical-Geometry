<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical"
        tools:context="com.andalus.abo_med7at.analyticalgeometry.ui.parabola_activity.ParabolaActivity">

        <androidx.cardview.widget.CardView
            style="@style/topCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical" />

                <TextView
                    style="@style/titleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/standard_form" />

                <HorizontalScrollView
                    style="@style/functionLineStyle"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(y-" />

                        <EditText
                            android:id="@+id/k_para_e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:inputType="numberDecimal|numberSigned"
                            android:nextFocusDown="@id/a_para_e" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=")^2=" />

                        <EditText
                            android:id="@+id/a_para_e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:inputType="numberDecimal|numberSigned"
                            android:nextFocusDown="@id/h_para_e" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(x-" />

                        <EditText
                            android:id="@+id/h_para_e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal|numberSigned" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=")" />
                    </LinearLayout>


                </HorizontalScrollView>

                <Button
                    android:id="@+id/btn_draw_para_stand_y_sqr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:text="@string/draw"
                    android:theme="@style/drawButtonStyle" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/centerCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/titleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/standard_form" />

                <HorizontalScrollView
                    style="@style/functionLineStyle"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(x-" />

                        <EditText
                            android:id="@+id/h_para_e_y"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:inputType="numberDecimal|numberSigned"
                            android:nextFocusDown="@id/a_para_e_y" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=")^2=" />

                        <EditText
                            android:id="@+id/a_para_e_y"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:inputType="numberDecimal|numberSigned"
                            android:nextFocusDown="@id/k_para_e_y" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(y-" />

                        <EditText
                            android:id="@+id/k_para_e_y"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal|numberSigned" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=")" />
                    </LinearLayout>


                </HorizontalScrollView>


                <Button
                    android:id="@+id/btn_draw_para_y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:text="@string/draw"
                    android:theme="@style/drawButtonStyle" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/centerCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/titleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/general_form" />

                <HorizontalScrollView
                    style="@style/functionLineStyle"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="y^2+" />

                        <EditText
                            android:id="@+id/D_x_p_gen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:inputType="numberDecimal|numberSigned"
                            android:nextFocusDown="@id/E_x_p_gen" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x+" />

                        <EditText
                            android:id="@+id/E_x_p_gen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:inputType="numberDecimal|numberSigned"
                            android:nextFocusDown="@id/F_x_p_gen" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="y+" />

                        <EditText
                            android:id="@+id/F_x_p_gen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal|numberSigned" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="=0" />
                    </LinearLayout>


                </HorizontalScrollView>


                <Button
                    android:id="@+id/btn_draw_Gen_x_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:text="@string/draw"
                    android:theme="@style/drawButtonStyle" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/bottomCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/titleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/general_form" />

                <HorizontalScrollView
                    style="@style/functionLineStyle"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x^2+" />

                        <EditText
                            android:id="@+id/D_y_p_gen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:inputType="numberDecimal|numberSigned"
                            android:nextFocusDown="@id/E_y_p_gen" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x+" />

                        <EditText
                            android:id="@+id/E_y_p_gen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:inputType="numberDecimal|numberSigned"
                            android:nextFocusDown="@id/F_y_p_gen" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="y+" />

                        <EditText
                            android:id="@+id/F_y_p_gen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal|numberSigned" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="=0" />
                    </LinearLayout>


                </HorizontalScrollView>

                <Button
                    android:id="@+id/btn_draw_Gen_y_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:text="@string/draw"
                    android:theme="@style/drawButtonStyle" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>