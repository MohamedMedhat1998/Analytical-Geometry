<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray_200"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context="com.andalus.abo_med7at.analyticalgeometry.circle_activity.CircleActivity">

    <android.support.v7.widget.CardView
        style="@style/topCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/dummy"
                android:orientation="horizontal"
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <TextView
                style="@style/titleStyle"
                android:id="@+id/tv_circle_standard_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/standard_form" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                style="@style/functionLineStyle"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(x-" />

                    <EditText
                        android:id="@+id/edit_h_c"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal|numberSigned" />
                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=")^2+(y-" />

                    <EditText
                        android:id="@+id/edit_k_c"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal|numberSigned" />
                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=")^2=(" />
                    <EditText
                        android:id="@+id/edit_r_c"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal" />
                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=")^2" />
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/btn_draw_standard_circle"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:theme="@style/drawButtonStyle"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:text="@string/draw" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        style="@style/centerCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/titleStyle"
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_form" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                style="@style/functionLineStyle"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/a_edit_c"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal|numberSigned" />

                    <TextView
                        android:id="@+id/txtView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x^2+" />

                    <EditText
                        android:id="@+id/b_edit_c"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal|numberSigned" />

                    <TextView
                        android:id="@+id/txtView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="y^2+" />

                    <EditText
                        android:id="@+id/g2_edit_c"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal|numberSigned" />

                    <TextView
                        android:id="@+id/txtView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x+" />

                    <EditText
                        android:id="@+id/f2_edit_c"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal|numberSigned" />

                    <TextView
                        android:id="@+id/txtView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="y+" />

                    <EditText
                        android:id="@+id/c_edit_c"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal|numberSigned" />

                    <TextView
                        android:id="@+id/txtView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="=0" />

                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:theme="@style/drawButtonStyle"
                android:layout_margin="8dp"
                android:layout_gravity="end"
                android:id="@+id/btn_draw_general_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/draw" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        style="@style/bottomCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView18"
                style="@style/titleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ends_of_the_diameter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/functionLineStyle"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtVi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(" />
                <EditText
                    android:id="@+id/x1_e"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal|numberSigned" />

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="," />
                <EditText
                    android:id="@+id/y1_e"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal|numberSigned" />

                <TextView
                    android:id="@+id/txtView57"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="),(" />
                <EditText
                    android:id="@+id/x2_e"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal|numberSigned" />

                <TextView
                    android:id="@+id/txtView77"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="," />
                <EditText
                    android:id="@+id/y2_e"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal|numberSigned" />

                <TextView
                    android:id="@+id/txtVsd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=")" />
            </LinearLayout>
            <Button
                android:id="@+id/btn_draw_with_ends"
                android:theme="@style/drawButtonStyle"
                android:layout_margin="8dp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/draw" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
</ScrollView>